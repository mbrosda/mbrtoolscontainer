# EditorConfig is awesome: http://EditorConfig.org
# Uses editorconfig to maintain consistent coding styles

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset                  = utf-8
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true

indent_size              = 2
indent_style             = space
max_line_length          = 120

[*.{tf,tfvars,DEFAULT,SBX,NPR,PRD}]
# from defaults:
charset i                = utf-8
end_of_line              = lf
insert_final_newline     = true
trim_trailing_whitespace = true

# individual:
indent_size              = 4
indent_style             = space

[*.{json,yml,yaml,j2,jsonnet,libsonnet}]
indent_style             = space
indent_size              = 2

[shell]
indent_style             = tab
indent_size              = 4
end_of_line              = lf

[*.sh]
indent_style             = tab
indent_size              = 4
end_of_line              = lf

[*.py]
indent_style             = space
indent_size              = 4

[*.conf]
indent_size              = 2
end_of_line              = lf
